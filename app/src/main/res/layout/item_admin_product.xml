<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/firstRowItemIdLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idTextView"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/white"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/id_textview_shape"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/secondRowItemNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/firstRowItemIdLayout">

            <TextView
                android:text="@string/item_product_admin_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textNameTextView"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/thirdRowItemNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/secondRowItemNameLayout">

            <TextView
                android:text="@string/item_product_admin_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textDescriptionTextView"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="start"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fourthRowItemNameLayout"
            app:layout_constraintTop_toBottomOf="@+id/thirdRowItemNameLayout">

            <TextView
                android:text="@string/item_product_admin_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textPriceTextView"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="italic"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                tools:ignore="RtlSymmetry"/>

            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:padding="8dp"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="start"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifthRowItemNameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/fourthRowItemNameLayout"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textImageTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="@string/item_product_admin_image"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="italic"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:id="@+id/imageViewAdmin"
                android:layout_width="245dp"
                android:layout_height="150dp"
                android:layout_margin="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_content_description"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>